{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node", 
    "target": "ES2020", 
    "outDir": "dist", 
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".", 
    "paths": {
      "~/*": ["src/*"] 
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["src/type.d.ts"], 
  "include": ["src/**/*"] 
}